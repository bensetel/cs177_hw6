function clumps=countClumps(a)
  #countClumps({1, 2, 2, 3, 4, 4}) → 2
  #countClumps({1, 1, 2, 1, 1}) → 2
  #countClumps({1, 1, 1, 1, 1}) → 1
  len = length(a);
  counter = 1;
  clumps = 0;
  found_clumps = [];
  while(counter < len)
    if(a(counter) == a(counter + 1) && !ismember(a(counter),found_clumps))
      if(isempty(found_clumps))
	found_clumps = a(counter);
      else
	found_clumps(end+1) = a(counter);
      end
    end
    ++counter;
  end
  if(isempty(found_clumps))
    clumps = 0;
  else
    clumps = length(found_clumps);
end