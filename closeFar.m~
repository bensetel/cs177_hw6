function foo = closeFar(nums) #nums should be an array of the form [a,b,c]
  foo = false;
  a = nums(1);
  b = nums(2);
  c = nums(3);
  if(abs(a-b) <= 1)
    if(abs(a-c) >= 2 && abs(b-c) >= 2)
      foo = true;
    end
  elseif(abs(a-c) <= 1)
    if(abs(a-b) >= 2 && abs(c-b) >= 2)
      foo = true;
    end
  end
end